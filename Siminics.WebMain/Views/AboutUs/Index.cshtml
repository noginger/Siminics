@using Siminics.Model

@{
    ViewBag.Title = "关于星秒";
    Layout = "~/Views/Shared/_Main_Frame.cshtml";
    SlideModel model = ViewBag.Slide;
}

@section RenderCss
{
    <style>
        p { margin-bottom: 0px;}
    </style>
}

<div style="width: 100%">
    @if (model != null)
    {
        <img src="@(model.imageurl)" style="width: 100%; margin-bottom: 70px;" />
    }
    <div style="width: 10%;">
        <img src="/Content/Images/aboutus.png" style="width: 100%;"/>
    </div>
    <div style="width: 80%; margin-left: 10%; margin-top: 50px; margin-bottom: 50px;">
        @if (ViewBag.CompanyInfo != null)
        {
            @Html.Raw(ViewBag.CompanyInfo)
        }
    </div>
</div>



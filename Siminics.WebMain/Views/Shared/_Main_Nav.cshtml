@using Siminics.Model
<script>
    $(function() {
        var name = '@ViewBag.Title';

        $(".sf-menu > li").each(function() {
            $(this).removeClass("active");
            if (name == $(this).attr("name")) {
                $(this).addClass("active");
            }
            else if (name.indexOf($(this).attr("name")) > -1) {
                $(this).addClass("active");
            }
        });
    });
</script>
<header id="fh5co-header-section" class="sticky-banner">
    <div class="container">
        <div class="nav-header">
            <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle dark"><i></i></a>
            <h1 id="fh5co-logo">
                <a href="index.html">
                    <img src="/content/Images/login_logo.png" width="250" />
                </a>
            </h1>
            <!-- START #fh5co-menu-wrap -->
            <nav id="fh5co-menu-wrap" role="navigation">
                <ul class="sf-menu" id="fh5co-primary-menu">
                    <li class="active" name="上海星秒光电科技有限公司"><a href="/">首页</a></li>
                    <li name="产品中心">
                        <a class="fh5co-sub-ddown" style="cursor: pointer">产品中心</a>
                        <ul class="fh5co-sub-menu">
                            @foreach (ProductModel item in ViewBag.ProductTypes)
                            {
                                <li><a href="/Goods?id=@item.ProductId">@item.productname</a></li>
                            }
                        </ul>
                    </li>
                    <li name="关于星秒"><a href="/AboutUs">关于星秒</a></li>
                    <li name="新闻中心"><a href="/NewsCenter">新闻中心</a></li>
                    <li name="技术支持">
                        <a href="" class="fh5co-sub-ddown">技术支持</a>
                        <ul class="fh5co-sub-menu">
                            @foreach (SurportTypeModel item in ViewBag.SurportTypes)
                            {
                                <li><a href="/Surport?id=@item.Id">@item.TypeName</a></li>
                            }
                            <li name="常见问题"><a href="/Surport/CommonQuestion">常见问题</a></li>
                        </ul>
                    </li>
                    <li name="加入我们"><a href="/JoinUs">加入我们</a></li>
                    <li name="联系我们"><a href="">联系我们</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>


@using Siminics.Model

@{
    ViewBag.Title = "联系我们";
    Layout = "~/Views/Shared/_Main_Frame.cshtml";
    SlideModel model = ViewBag.Slide;
    CompanyContentModel Contact = ViewBag.Contact;
    CompanyContentModel Traffic = ViewBag.Traffic;
}

@section RenderCss
{
    <style>
        .advice {
            border-collapse: collapse;
            border: 0px;
        }

        .advice td { padding: 5px;}
    </style>
}

<script>
    $(function() {
        var message='@ViewBag.Error';
        if (message != null&&message.length>0) {
            alert(message);
        }
    })
</script>

<div class="container-fluid">
    @if (model != null)
    {
        <img src="@(model.imageurl)" style="width: 100%; margin-bottom: 70px;" />
    }
    
    <div style="width: 10%">
        <img src="/Content/Images/contactus.png" style="width: 100%; margin-bottom: 50px;" />
    </div>
    <div style="width: 100%; margin-bottom: 50px;">
        <div style="width: 80%;margin-left: 15%">
            <div style="width: 50%; float: left;">
                <h3>上海星秒光电科技有限公司</h3>
                <div>
                    @if (Contact != null)
                    {
                        @Html.Raw(Contact.content)
                    }
                </div>
            </div>
            <div style="width: 50%; float: left;">
                <h4>留言反馈</h4>
                    @using (Html.BeginForm("Index", "ContactUs", FormMethod.Post, new {@id = "form1"}))
                    {
                        <table class="advice">
                            <tr>
                                <td>
                                    <input type="text" name="username" placeholder="姓名" maxlength="10"/>
                                </td>
                                <td>
                                    <input type="text" name="company" placeholder="单位" maxlength="30"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" name="phone" placeholder="电话" maxlength="15"/>
                                </td>
                                <td>
                                    <input type="text" name="email" placeholder="邮箱" maxlength="80"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <textarea name="message" style="width: 400px; height: 100px;"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <input type="submit" text="提交" style="background-color: #ffa51a; color: white; border: 0; width: 60px; height: 30px;"/>
                                </td>
                            </tr>
                        </table>
                    }
            </div>
        </div>
    </div>
    
    <div style="width: 10%">
        <img src="/Content/Images/maponline.png" style="width: 100%; margin-bottom: 50px;" />
    </div>

    <div style="width: 100%">
        <div style="width: 80%;margin-left: 15%">
            <div style="float: left;margin-right: 30px;">
                <img src="/Content/Images/map.png" style="width:700px; float: left;" />
            </div>
            
            <div style="width: 30%; float: left;">
                <div style="width: 100%;">
                    <h3>交通线路</h3>
                    <div>
                        @if (Traffic != null)
                        {
                            @Html.Raw(Traffic.content)
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


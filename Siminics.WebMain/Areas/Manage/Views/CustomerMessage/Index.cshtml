@using BaseLibrary.Common
@using Siminics.Model

@{
    ViewBag.Title = "留言管理";
    Layout = "~/Views/Shared/_Manage_Frame.cshtml";
}

@section RenderJs
{
    <script src="/Scripts/index.js"></script>
}

<div class="body_center">
    <div class="select_condition">
    </div>
    <div class="clear"></div>
    <!--列表-->
    <div class="tablelist">
        <table width="100%" border="0">
            <tr class="title">
                <td width="80">编号</td>
                <td width="200">姓名【公司名称】</td>
                <td width="140">邮箱</td>
                <td width="140">电话</td>
                <td width="">留言</td>
                <td width="100">留言时间</td>
            </tr>
            @foreach (LeaveMessageModel info in ViewBag.Info)
            {
                <tr>
                    <td>@info.Id</td>
                    <td>@info.UserName@Html.Raw("【"+info.Company+"】")</td>
                    <td>@info.Email</td>
                    <td>@info.Phone</td>
                    <td>@info.Message</td>
                    <td>@info.CreateTime</td>
                </tr>
            }
        </table>
        <div class="pagebox">
            @MvcHtmlString.Create(ManageMvcPaging.Create(25, ViewBag.Count, 5, false))
        </div>
    </div>
</div>

